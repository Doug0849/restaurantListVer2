<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div>
        <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST" id="form">
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-utensils pr-2"></i>
                名稱：
              </span>
            </p>
            <input type="text" id="name" name="name" size="30" value="{{restaurant.name}}" required>
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-utensils pr-2"></i>
                英文名稱：
              </span>
            </p>
            <input type="text" id="name_en" name="name_en" size="30" value="{{restaurant.name_en}}">
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-utensils pr-2"></i>
                類別：
              </span>
            </p>
            <input type="text" id="category" name="category" size="30" value={{restaurant.category}} required>
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-map-marker-alt pr-2"></i>
                地址：
              </span>
              <input type="text" id="location" name="location" size="80" value="{{restaurant.location}}" required>
            </p>
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-map-marked-alt pr-2 fa-xs"></i>
                Google Map：
              </span>
              <input type="text" id="google_map" name="google_map" size="40" value={{restaurant.google_map}} required>
              </a>
            </p>
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-mobile-alt pr-2"></i>
                電話：
              </span>
              <input type="text" id="phone" name="phone" size="30" value="{{restaurant.phone}}" required>
            </p>
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="far fa-image"></i>
                照片連結：
              </span>
              <input type="text" id="image" name="image" size="80" value="{{restaurant.image}}" required>
            </p>
          </div>
          <div class="d-flex mb-1">
            <p class="mb-1">
              <span class="text-secondary">
                <i class="fas fa-star"></i>
                評分：
              </span>
              <input type="text" id="rating" name="rating" size="3" value="{{restaurant.rating}}" required>
            </p>
          </div>
          <div class="mb-1">
            <p class="mb-1"><label for="description" class="text-secondary">描述：</label></p>
            <textarea id="description" name="description" rows="10" cols="110">
            {{restaurant.description}}
          </textarea>
          </div>
          <button name="edit" type="submit" class="common-btn mb-2" id="submit-btn">SAVE</button>
        </form>
        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" onclick="confirm('Are you sure to delete {{restaurant.name}} ?')" class="delete-btn">
            Delete
          </button>
          <a href="/" class="common-a-btn ml-1 ">Go Back</a>
        </form>
        <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
          style="max-width: 600px;">
      </div>
    </div>
  </div>