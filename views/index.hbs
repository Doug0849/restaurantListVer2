<!-- search bar -->
<div class="container search-bar mt-3">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-auto mr-auto">
      <a href="/restaurants/new" class="btn btn-primary mb-3">新增餐廳</a>
      <div class="search-bar-outer ">
        <div class="search-bar-inner">
          <form action="/search">
            <div class="input-group">
              <span class="mb-2 mr-2 align-self-end">尋找餐廳</span>
              <input type="text" name="keyword" class="form-control" id="keyword" placeholder="輸入餐廳、分類"
                aria-label="Restaurant Name..." value="{{ keyword }}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="sort-selector align-self-center col-auto mr-5">
      <form action="/sort" method="GET">
        <select name="sort" id="sort-selector" onchange="submit()">
          <option>請選擇排序方式</option>
          <option value="name_asc">A->Z</option>
          <option value="name_desc">Z->A</option>
          <option value="category">類別</option>
          <option value="location">地區</option>
        </select>
      </form>
    </div>
    <div class="col-1"></div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns d-flex flex-wrap">
        {{#each restaurants}}
        <div class="r-card mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-1">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3 border-bottom">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="d-flex justify-content-end">
                <a href="/restaurants/{{this._id}}" class="common-a-btn ml-1">Details</a>
                <a href="/restaurants/{{this._id}}/edit" class="common-a-btn ml-1 ">Edit</a>
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" onSubmit="return CheckForm()">
                  <button type="submit" class="delete-btn ml-1"> Delete </button>
                </form>
              </div>
            </div>
        </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/searchCheckValid.js"></script>
<script src="/javascripts/checkDelete.js"></script>